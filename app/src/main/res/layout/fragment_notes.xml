<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_notes"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Not Ekle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_note"
        android:layout_width="319dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="YENİ NOT EKLE"
        app:layout_constraintEnd_toEndOf="@+id/edit_notes"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/edit_notes"
        android:background="@color/orange"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/edit_notes" />

    <Button
        android:id="@+id/btn_list_note"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:text="NOTLARIMA DÖN"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_note"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_add_note"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_note" />
</android.support.constraint.ConstraintLayout>